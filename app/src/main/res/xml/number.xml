<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyHeight="40dip"
    android:keyWidth="33.3%p"
    android:horizontalGap="1px"
    android:verticalGap="1px">
    <Row>
        <Key
            android:codes="10"
            android:keyLabel="1" />
        <Key
            android:codes="20"
            android:keyLabel="2" />
        <Key
            android:codes="30"
            android:keyLabel="3" />
    </Row>

    <Row>
        <Key
            android:codes="40"
            android:keyLabel="4" />
        <Key
            android:codes="50"
            android:keyLabel="5" />
        <Key
            android:codes="60"
            android:keyLabel="6" />
    </Row>

    <Row>
        <Key
            android:codes="70"
            android:keyLabel="7" />
        <Key
            android:codes="80"
            android:keyLabel="8" />
        <Key
            android:codes="90"
            android:keyLabel="9" />
    </Row>

    <Row>
        <Key
            android:codes="101"
            android:keyLabel="X" />

        <Key
            android:codes="0"
            android:keyLabel="0" />
        <Key
            android:codes="-5"
            android:keyIcon="@drawable/abc_delete"
            android:isRepeatable="true"/>
    </Row>
</Keyboard>