<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_horizon_scroll"
            style="@style/MainBigButton"
            android:text="水平滚动"/>

        <Button
            android:id="@+id/bt_vertical_scroll"
            style="@style/MainBigButton"
            android:text="垂直滚动"/>

        <Button
            android:id="@+id/bt_custom_swipe"
            style="@style/MainBigButton"
            android:text="自定义Swipe"/>

        <Button
            android:id="@+id/bt_horizon_scroll_test"
            style="@style/MainBigButton"
            android:text="水平滑动"/>

        <Button
            android:id="@+id/bt_multi_adapter"
            style="@style/MainBigButton"
            android:text="自定义多样式adapter"/>
    </LinearLayout>
</ScrollView>